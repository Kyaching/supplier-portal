generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model department {
  id        Int        @id(map: "Department_pkey") @default(autoincrement())
  dept_name String
  employee  employee[]
}

model employee {
  id           Int        @id(map: "Employee_pkey") @default(autoincrement())
  emp_name     String?
  email        String     @unique(map: "Employee_email_key")
  first_name   String
  last_name    String
  job_title    String
  departmentId Int
  department   department @relation(fields: [departmentId], references: [id], map: "Employee_departmentId_fkey")
}

model job_title {
  id    Int    @unique(map: "JobTitle_id_key")
  title String
  user  user[]
}

model messages {
  id        String    @id(map: "Messages_pkey")
  sender    String?
  receivers Json?
  subject   String?
  body      String?
  date      String?
  status    String?
  new_date  DateTime? @db.Timestamptz(6)
}

model user {
  id            Int       @id @default(autoincrement())
  user_name     String    @unique(map: "User_user_name_key")
  first_name    String
  middle_name   String?
  last_name     String
  email         String    @unique(map: "User_email_key")
  password      String?
  conf_password String?
  tenant_id     String?
  job_id        Int
  user_type_id  Int
  order         Int?
  job_title     job_title @relation(fields: [job_id], references: [id])
  user_type     user_type @relation(fields: [user_type_id], references: [id])
}

model user_type {
  id   Int    @id @unique(map: "UserType_id_key") @default(autoincrement())
  type String
  user user[]
}
